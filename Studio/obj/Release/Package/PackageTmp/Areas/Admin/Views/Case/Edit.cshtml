@model Studio.Models.Case
@{
    ViewBag.Title = "编辑案例";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section head{
	<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<script src="/Plugins/xheditor/xheditor-1.1.14-zh-cn.min.js" type="text/javascript"></script>

	<script type="text/javascript">
		$(function () {
			$("#Description").xheditor({ upImgUrl: "/Admin/Blog/UploadPicture", upImgExt: "jpg,jpeg,gif,png", html5Upload: false });
		});
	</script>
}

<h2>编辑案例</h2>
@using (Html.BeginForm("Edit", "Case", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.Partial("_Form")
	@Html.HiddenFor(m => m.CaseID)

	<div class="section">
		<button type="submit" class="button-save">提交</button>
	</div>
}