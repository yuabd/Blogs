@model Studio.Models.CRM.WebsiteViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-header">
	<div id="breadcrumb"> <a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a><a href="/CRM/website/index" class="current">论坛库</a></div>
	<h1>论坛库</h1>
</div>
<div class="container-fluid">
	<hr />
	<div class="row-fluid">
	<div class="span8">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon"> <i class="icon-th"></i> </span>
            <h5>网站信息</h5>
          </div>
          <div class="widget-content nopadding">
			<form action="#" class="form-horizontal">
			<div class="control-group">
				<label class="control-label">论坛名 :</label>
				<div class="controls">
					@Html.LabelFor(m => m.Website.WebsiteName, Model.Website.WebsiteName)
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">链接 :</label>
				<div class="controls">
				@Html.LabelFor(m => m.Website.WebsiteUrl, Model.Website.WebsiteUrl)
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">类型 :</label>
				<div class="controls">
				@Html.LabelFor(m => m.Website.Type, Model.Website.Type)
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">行业 :</label>
				<div class="controls">
					@Studio.Helpers.LabelHelper.GetIndustryName(Model.Website.IndustryID)
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">日期 :</label>
				<div class="controls">
					@Html.LabelFor(m => m.Website.DateCreated, Model.Website.DateCreated.ToString("d"))
				</div>
			</div>
			</form>
          </div>
        </div>
	</div>
	<div class="span4">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon"> <i class="icon-th"></i> </span>
            <h5>用户表</h5>
          </div>
          <div class="widget-content nopadding">
            <table class="table table-bordered table-striped with-check">
              <thead>
                <tr>
                  <th><i class="icon-resize-vertical"></i></th>
                  <th>用户名</th>
                  <th>密码</th>
				  <th style="width: 80px;">操作</th>
                </tr>
              </thead>
              <tbody>
				@foreach (var item in Model.WebsiteUsers)
	{
				<tr>
					<td><input type="checkbox" /></td>
					<td>@item.UserName</td>
					<td>@item.Password</td>
					<td>
						<div class="btn-group">
							<a data-toggle="dropdown" class="btn btn-success dropdown-toggle">操作<span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="/CRM/website/edit/@item.WebsiteID">编辑</a></li>
								<li><a href="/CRM/website/delete/@item.WebsiteID">删除</a></li>
							</ul>
						</div>
					</td>
                </tr>
	}
              </tbody>
            </table>
          </div>
        </div>
	</div>
	</div>
	<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon">
				<input type="checkbox" id="title-checkbox" name="title-checkbox" />
            </span>
            <h5>网络外链</h5>
          </div>
          <div class="widget-content nopadding">
            <table class="table table-bordered table-striped with-check">
              <thead>
                <tr>
                  <th><i class="icon-resize-vertical"></i></th>
                  <th>论坛名</th>
                  <th>创建时间</th>
				  <th style="width: 80px;">操作</th>
                </tr>
              </thead>
              <tbody>
				@foreach (var item in Model.WebsiteDetails)
	{
				<tr>
					<td><input type="checkbox" /></td>
					<td><a href="@item.Link" target="_blank">@item.Link</a></td>
					<td>@item.DateCreated</td>
					<td>
						<div class="btn-group">
							<a data-toggle="dropdown" class="btn btn-success dropdown-toggle">操作<span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="/CRM/website/edit/@item.WebsiteID">编辑</a></li>
								<li><a href="/CRM/website/delete/@item.WebsiteID">删除</a></li>
							</ul>
						</div>
					</td>
                </tr>
	}
              </tbody>
            </table>
          </div>
        </div>
	</div>
	</div>
</div>
