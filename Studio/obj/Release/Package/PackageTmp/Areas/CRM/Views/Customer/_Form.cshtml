@model Studio.Models.Customer
		   
<div class="control-group">
	<label class="control-label">公司地址 :</label>
	<div class="controls">
		@Html.TextBoxFor(m => m.Address, new {@class = "span9", placeholder="公司地址"})
	</div>
</div>
<div class="control-group">
	<label class="control-label">客户价值 :</label>
	<div class="controls">
		@Html.DropDownListFor(m => m.Type, Studio.Helpers.ListHelper.GetCustomerTypeList(), new { @class = "span9" })
	</div>
</div>
<div class="control-group">
	<label class="control-label">行业 :</label>
	<div class="controls">
		@Html.DropDownListFor(m => m.IndustryID, Studio.Helpers.ListHelper.GetIndustryList(), new { @class = "span9" })
	</div>
</div>
<div class="control-group">
	<label class="control-label">客户来源 :</label>
	<div class="controls">
		@Html.DropDownListFor(m => m.LeadSource, Studio.Helpers.ListHelper.GetLeadSourceList(), new { @class = "span9" })
	</div>
</div>
<div class="control-group">
	<label class="control-label">状态 :</label>
	<div class="controls">
		@Html.DropDownListFor(m => m.Status, Studio.Helpers.ListHelper.GetCustomerTypeList(), new { @class = "span9" })
	</div>
</div>
<div class="control-group">
	<label class="control-label">日期 :</label>
	<div class="controls">
		@Html.TextBoxFor(m => m.DateCreated, new { @class = "span9" })
	</div>
</div>

