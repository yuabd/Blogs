@model Studio.Models.Others.Paginated<Studio.Models.Website>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
	<link rel="stylesheet" href="/App_Themes/CRM/uniform.css" />
	<link href="/App_Themes/CRM/select2.css" rel="stylesheet" type="text/css" />
}

<div id="content-header">
	<div id="breadcrumb"> <a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a><a href="/CRM/website/index" class="current">论坛库</a></div>
	<h1>论坛库</h1>
</div>
<div class="container-fluid">
	<hr />
	<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon">
				
				<input type="checkbox" id="title-checkbox" name="title-checkbox" />
            </span>
            <h5>Static table with checkboxes</h5>
          </div>
          <div class="widget-content nopadding">
            <table class="table table-bordered table-striped with-check">
              <thead>
                <tr>
                  <th><i class="icon-resize-vertical"></i></th>
                  <th>论坛名</th>
                  <th>行业</th>
                  <th>创建时间</th>
                  <th>类型</th>
				  <th style="width: 180px;">操作</th>
                </tr>
              </thead>
              <tbody>
				@foreach (var item in Model)
	{
				<tr>
					<td><input type="checkbox" /></td>
					<td>@item.WebsiteName</td>
					<td>@item.IndustryID</td>
					<td>@item.DateCreated</td>
					<td>@item.Type</td>
					<td>
						<div class="btn-group">
							<a data-toggle="dropdown" class="btn btn-success dropdown-toggle">操作<span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="/CRM/website/edit/@item.WebsiteID">编辑</a></li>
								<li><a href="/CRM/website/delete/@item.WebsiteID">删除</a></li>
							</ul>
						</div>
						<div class="btn-group">
							<a class="btn btn-info" href="/CRM/website/detail/@item.WebsiteID">查看详细</a>
						</div>
					</td>
                </tr>
	}
              </tbody>
            </table>
          </div>
        </div>
	</div>
	</div>
</div>