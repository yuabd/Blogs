@model Studio.Models.CRM.CustomerViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
	@*<link href="/App_Themes/CRM/matrix-style.css" rel="stylesheet" type="text/css" />*@
	<link href="/App_Themes/CRM/select2.css" rel="stylesheet" type="text/css" />
}
@section scripts{
	<script src="/Scripts/jquery.uniform.js"></script> 
	<script src="/Scripts/select2.min.js"></script> 
	<script src="/Scripts/jquery.dataTables.min.js"></script> 
	<script src="/Scripts/matrix.tables.js"></script>
}

<div id="content-header">
	<div id="breadcrumb"> 
		<a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a>
		<a href="/CRM/customer/index">客户库</a>
		<a href="/CRM/customer/index" class="current">查看客户详情</a>
	</div>
	<h1>@Model.Customer.CompanyName</h1>
</div>
<div class="container-fluid">
	<hr />
	<div class="row-fluid">
	<div class="span6">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon"> <i class="icon-th"></i> </span>
            <h5>网站信息</h5>
		</div>
		<div class="widget-content nopadding">
			<form action="#" class="form-horizontal">
				<div class="control-group">
					<label class="control-label">公司名称 :</label>
					<div class="controls">
						<label>@Model.Customer.CompanyName</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">客户价值 :</label>
					<div class="controls">
						<label>@Model.Customer.Type</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">行业 :</label>
					<div class="controls">
						<label>@Model.Customer.IndustryID</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">客户来源 :</label>
					<div class="controls">
						<label>@Model.Customer.LeadSource</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">日期 :</label>
					<div class="controls">
						<label>@Model.Customer.DateCreated</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">归属 :</label>
					<div class="controls">
						<label>#@Model.Customer.UserID</label>
					</div>
				</div>
			</form>
		</div>
	</div>
	</div>
	<div class="span6">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon"> <i class="icon-th"></i> </span>
            <h5>联系人信息</h5>
		</div>
		<div class="widget-content nopadding">
			<form action="#" class="form-horizontal">
				<div class="control-group">
					<label class="control-label">联系人 :</label>
					<div class="controls">
						<label>@Model.Customer.ContactName</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">性别 :</label>
					<div class="controls">
						<label>@Model.Customer.Gender</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">联系号码 :</label>
					<div class="controls">
						<label>@Model.Customer.Phone</label>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">邮箱 :</label>
					<div class="controls">
						<label>@Model.Customer.Email</label>
					</div>
				</div>
			</form>
		</div>
		</div>
	</div>
	</div>
	<div class="row-fluid">
			<div class="span12">
				<a href="/CRM/customer/addtask/@Model.Customer.CompanyName"class="btn btn-success">新增备忘</a>
				<a href="/CRM/customer/index" class="btn btn-danger">返回</a>
			</div>
		</div>
	<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon">
				<i class="icon-time"></i>
            </span>
            <h5>网络外链</h5>
          </div>
          <div class="widget-content nopadding">
            <table class="table table-striped table-bordered data-table">
              <thead>
                <tr>
                  <th>内容</th>
				  <th>日期</th>
				  <th style="width: 80px;">操作</th>
                </tr>
              </thead>
              <tbody>
				@foreach (var item in Model.Tasks)
	{
				<tr>
					<td>@item.Description</td>
					<td>@item.DateCreated</td>
					<td class="taskOptions">
						<a href="/CRM/Task/edit/@item.TaskID" class="tip-top" data-original-title="Update"><i class="icon-ok"></i></a>
						<a href="/CRM/Task/delete/@item.TaskID" class="tip-top" data-original-title="Delete"><i class="icon-remove"></i></a>
					</td>
                </tr>
	}
              </tbody>
            </table>
          </div>
        </div>
	</div>
	</div>
</div>