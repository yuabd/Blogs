<section class="slice color-one">
	<div class="w-section inverse">
    	<div class="container">
        	<div class="row">
                <div class="col-md-6">
                    <h2>客户简介</h2>

                    <dl class="dl-horizontal">
                        <dt>项目名称</dt>
                        <dd>@Model.Name</dd>
                        <dt>完成日期</dt>
                        <dd>@Model.DateCreated.ToShortDateString()</dd>
                        <dt>分类</dt>
                        <dd>@Model.CategoryID</dd>
                        <dt>运用的技术</dt>
                        <dd>HTML, CSS, Asp.Net, jQuery</dd>
                        <dt>网址</dt>
                        <dd><a href="@Model.Website" style="color: White;" target="_blank" title="@Model.Name">@Model.Website</a></dd>
                    </dl>
                </div>
                <div class="col-md-5 col-md-offset-1">
                	<h2>项目详情</h2>
                    <div class="contrast-box color-one-c">
                    	@Html.Raw(Model.Description)
                    </div>
                </div>
            </div>
			<div class="row">
				<div class="col-md-12">
                    <img data-original="@Model.PictureFolder/Source/@Model.PictureFile" class="img-responsive lazy" alt="@Model.Name" />
                </div>
			</div>
        </div>
    </div>
    
    <div class="section-title color-two">
        <h3>更多案例</h3>
        <div class="indicator-down color-two"></div>
    </div>
</section>
<section class="slice animate-hover-slide">
	<div class="w-section inverse">
        <div class="container">
            <div id="carouselWork" class="carousel-3 slide animate-hover-slide">
                <div class="carousel-nav">
                    <a data-slide="prev" class="left color-two" href="#carouselWork"><i class="fa fa-angle-left"></i></a>
                    <a data-slide="next" class="right color-two" href="#carouselWork"><i class="fa fa-angle-right"></i></a>
                </div>
                
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="row">
							@foreach (var item in new Studio.Services.SiteHelp().GetCases().Take(4).ToList())
	   {
                            <div class="col-md-3">
                                <figure>
                                    <img alt="@item.Name" src="@item.PictureFolder/@item.PictureThumbnail" class="img-responsive">
                                    <figcaption class="color-two-t">
                                        <a href="@item.PictureFolder/Source/@item.PictureThumbnail" title="@item.Name" class="btn btn-lg btn-one theater"><i class="fa fa-search-plus"></i></a>
                                    </figcaption>
                                </figure>
                            </div>
	   }
                        </div>
                    </div>
                    <div class="item">
                        <div class="row">
                            @foreach (var item in new Studio.Services.SiteHelp().GetCases().Skip(4).Take(4).ToList())
							{
                            <div class="col-md-3">
                                <figure>
                                    <img alt="@item.Name" src="@item.PictureFolder/@item.PictureThumbnail" class="img-responsive">
                                    <figcaption class="color-two-t">
										<a href="@item.PictureFolder/Source/@item.PictureThumbnail" title="@item.Name" class="btn btn-lg btn-one theater"><i class="fa fa-search-plus"></i></a>
                                        <a href="@item.PictureFolder/Source/@item.PictureThumbnail" title="@item.Name" class="btn btn-lg btn-one theater"><i class="fa fa-search-plus"></i></a>
                                    </figcaption>
                                </figure>
                            </div>
							}
                        </div>
                    </div>
                    
                </div>
            </div>
            
        </div>
    </div>
</section>
