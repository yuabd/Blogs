@model Studio.Models.BlogComment
<div class="comment">
	<div class="head-right">
		<img src="http://www.gravatar.com/avatar/@Model.GravatarHash?size=40&d=monsterid" alt="@Model.Name" /><br />
		<p>@Model.Name</p>
	</div>
	<div class="comment-content">
		<div class="comment-header">
			<p>
				<span>#@{
					var i = @Studio.Helpers.ListHelper.GetBlogComments().Where(m => m.IsPublic == true && m.BlogID == Model.BlogID).Count();
					i++;
				}
					@i
				</span><strong>@Model.Name</strong> 于 <em>@Model.DateCreated.ToString("D").</em></p>
		</div>
		<div class="comment-body">
			@Model.Message
		</div>
		<div class="comment-footer">
			@*<span>转发至：</span>*@
		</div>
	</div>
</div>
