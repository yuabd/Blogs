@model Studio.Models.Website
		   
<div class="control-group">
	<label class="control-label">论坛名 :</label>
	<div class="controls">
		@Html.TextBoxFor(m => m.WebsiteName, new {@class = "span6", placeholder="论坛名"})
		<span class="help-block">@Html.ValidationMessageFor(m => m.WebsiteName)</span>
	</div>
</div>
<div class="control-group">
	<label class="control-label">链接 :</label>
	<div class="controls">
		@Html.TextBoxFor(m => m.WebsiteUrl, new {@class = "span11", placeholder="链接，如：http://www.baidu.com"})
		<span class="help-block">@Html.ValidationMessageFor(m => m.WebsiteUrl)</span>
	</div>
</div>
<div class="control-group">
	<label class="control-label">类型 :</label>
	<div class="controls">
		@Html.DropDownListFor(m => m.Type, Studio.Helpers.ListHelper.GetWebisteTypeList(), new { @class = "span6" })
		<span class="help-block">@Html.ValidationMessageFor(m => m.Type)</span>
	</div>
</div>
<div class="control-group">
	<label class="control-label">行业 :</label>
	<div class="controls">
		@Html.DropDownListFor(m => m.IndustryID, Studio.Helpers.ListHelper.GetIndustryList(), new { @class = "span6" })
		<span class="help-block">@Html.ValidationMessageFor(m => m.IndustryID)</span>
	</div>
</div>
<div class="control-group">
	<label class="control-label">日期 :</label>
	<div class="controls">
		<input type="text" name="DateCreated" id="DateCreated" data-date="2013-04-30" data-date-format="yyyy-mm-dd" value="@Model.DateCreated" class="datepicker span6">
		<span class="help-block">日期格式(2013-04-30)</span>
		<span class="help-block">@Html.ValidationMessageFor(m => m.DateCreated)</span>
	</div>
</div>