@model Studio.Models.Others.Paginated<Studio.Models.Task>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content-header">
	<div id="breadcrumb"> <a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a><a href="/CRM/task/index" class="current">任务列表</a></div>
	<h1>任务列表</h1>
</div>
<div class="container-fluid">
	<hr />
	<div class="row-fluid">
		<div class="span12">
			<a href="/CRM/task/add" class="btn btn-success">新增任务</a>
		</div>
	<//div>
	<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
          <div class="widget-title"> 
			<span class="icon">
				<i class="icon-time"></i>
            </span>
            <h5>TO DO LIST</h5>
          </div>
          <div class="widget-content nopadding">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
					<th>类型</th>
					<th>内容</th>
					<th>日期</th>
					<th>截至</th>
					<th>状态</th>
					<th style="width: 80px;">操作</th>
                </tr>
              </thead>
              <tbody>
				@foreach (var item in Model)
	{
				<tr>
					<td>@item.Type</td>
					<td>@item.Description</td>
					<td>@item.DateCreated</td>
					<td>@item.DateEnd</td>
					<td class="taskStatus"><span class="in-progress">@item.Status</span></td>
					<td class="taskOptions">
						<a href="/CRM/Task/edit/@item.TaskID" class="tip-top" data-original-title="Update"><i class="icon-ok"></i></a>
						<a href="/CRM/Task/delete/@item.TaskID" class="tip-top" data-original-title="Delete"><i class="icon-remove"></i></a>
					</td>
                </tr>
	}
              </tbody>
            </table>
          </div>
        </div>
	</div>
</div>