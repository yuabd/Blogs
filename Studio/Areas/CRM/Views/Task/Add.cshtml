@model Studio.Models.Task
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
	<link href="/App_Themes/CRM/select2.css" rel="stylesheet" type="text/css" />
}
@section scripts{
	<script src="/Scripts/jquery.uniform.js"></script> 
	<script src="/Scripts/select2.min.js"></script> 
	<script src="/Scripts/matrix.form_common.js"></script> 
}
<div id="content-header">
	<div id="breadcrumb"> <a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a><a href="/crm/task/add" class="current">新增任务</a></div>
	<h1>新增任务</h1>
</div>
<div class="container-fluid">
	<hr />
	<form action="/CRM/task/add" method="post" class="form-horizontal">
		@Html.HiddenFor(m => m.UserID)
		@Html.HiddenFor(m => m.ID)
		<div class="row-fluid">
			<div class="span12">
				<button type="submit" class="btn btn-success">保存</button>
				<a href="/CRM/task/index" class="btn btn-danger">返回</a>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<div class="widget-box">
					<div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
						<h5>任务详情</h5>
					</div>
					<div class="widget-content nopadding">
						@Html.Partial("_Task")
					</div>
				</div>
			</div>
		</div>
	</form>
</div>