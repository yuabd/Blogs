					//</li>
					var html = '<li><a href="/blog/index">所有文档</a></li>';
					for (var i = 0; i < res.length; i++) {
						html += '<li><a href="/blog/category/' + res[i].categoryID + '">' + res[i].categoryName + '</a></li>';
