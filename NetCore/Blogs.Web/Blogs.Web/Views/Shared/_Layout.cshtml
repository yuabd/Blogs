				</div>

				<div class="col-md-3 col-sm-3 d-none d-sm-block">
					<h4>Friend Links</h4>

					<ul class="list-unstyled"></ul>
				</div>

			</div>
		</div>
	</footer>
	@*@Scripts.Render("~/bundles/jquery")*@

	<div class="modal fade" id="wechatmodal" tabindex="-1" role="dialog" aria-labelledby="qrmodalLabel-wechat" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="qrmodalLabel-wechat">扫码免费领POS机</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body text-center">
					<img src="~/images/wechat.jpg" style="width:100%;" class="m-auto img-fluid" />
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>



	<script src="~/js/jquery-3.1.1.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/bootstrap.ediblog.slidemenu.min.js"></script>
	<script src="~/js/jquery.lazyload.min.js"></script>
	<script src="~/js/btvideo.app.js"></script>
	@RenderSection("scripts", false)

	<script>
		$(function () {
			$.ajax({
				url: "/Blog/GetCategories",
				type: "get",
				success: function (res) {

					//<li>
