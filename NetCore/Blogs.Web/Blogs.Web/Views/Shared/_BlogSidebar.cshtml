	<div class="hidden-xs">
		<section class="blog-info-desktop-lg visible-lg">
			<div class="card-bkimg-container">
				<img class="card-bkimg" alt="" src="~/images/wechat.jpg?v=1">
			</div>
			<div class="blog-info-photo-text text-center">
				<a href="#" data-toggle="modal" data-target="#wechatmodal">
					<img data-original="/images/wechat.jpg?v=1" alt="yuabd" class="media-object img-circle center-block blogger-head-pic">
				</a>
				<div class="bor"></div>
				<div>
					<h3 class="marginzero">
						很好记POS
					</h3>
					<div class="bor"></div>
					<p>
						华智融7210多平台+10固定188元，银盛通、金大宝、畅捷、拉卡拉大POS机押金99元起，秒到0.55%，花呗0.38%
					</p>
				</div>
			</div>
			<div class="bor"></div>
			<div class="btn-group btn-group-justified">
				<a href="#" onclick="trackOutboundLink('咨询', 'PC打开')" data-toggle="modal" data-target="#wechatmodal" class="btn btn-success">
					<i class="fa fa-envelope"></i>
					点击免费领取
				</a>
			</div>
		</section>

		<div class="bor"></div>
	</div>
	<div class="bor"></div>
	<section class="top-tags">
		<div class="panel panel-default">
			<div class="panel-heading">热门话题</div>
			<div class="panel-body">
				<div class="toptags-list">
					@foreach (var item in Model)
					{
						<a href="/blog/tags/@(Html.Raw(item.Tag))" title="@Html.Raw(item.Tag)">@Html.Raw(item.Tag)</a>
					}
				</div>
			</div>
		</div>
	</section>
	<div class="bor"></div>
