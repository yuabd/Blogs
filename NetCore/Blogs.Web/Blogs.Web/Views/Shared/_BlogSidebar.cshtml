	@if (ViewBag.Hots != null)
	{
		<section class="cat-list mb-4">
			<div class="panel panel-default">
				<div class="panel-heading">热门文章</div>
				<div class="panel-body">
					<div class="list-group list-group-flush">
						@foreach (var item in ViewBag.Hots)
						{
							<a class="list-group-item list-group-item-action" title="@item.BlogTitle" href="/blog/post/@item.BlogID">
								@item.BlogTitle
							</a>
						}
					</div>
				</div>
			</div>
		</section>

		<div class="bor"></div>
	}
	@if (ViewBag.News != null)
	{
		<section class="cat-list mb-4">
			<div class="panel panel-default">
				<div class="panel-heading">最新文章</div>
				<div class="panel-body">
					<div class="list-group list-group-flush">
						@foreach (var item in ViewBag.News)
						{
							<a class="list-group-item list-group-item-action" title="@item.BlogTitle" href="/blog/post/@item.BlogID">
								@item.BlogTitle
							</a>
						}
					</div>
				</div>
			</div>
		</section>

		<div class="bor"></div>
	}
